<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <include layout="@layout/header_bar"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            >

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerInParent="true"
                android:src="@mipmap/wifi" />


        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/link_wifi_text_name"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@null"
                android:singleLine="true"
                android:gravity="center_vertical"
                android:hint="@string/Please_select_a_network_connection"
                android:textColor="#42000000"
                android:textSize="14dp"
                android:layout_marginLeft="20dp"
                />


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="#FFF0F0F0" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:orientation="horizontal">



                <EditText
                    android:id="@+id/link_wifi__pas"
                    android:layout_marginLeft="30dp"
                    android:drawablePadding="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@null"
                    android:hint="@string/ed_wif"
                    android:singleLine="true"
                    android:textColor="#42000000"
                    android:textSize="14dp" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="49dp">

                    <ImageButton
                        android:id="@+id/link_wifi_eyes"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20dp"
                        android:background="#00000000"
                        android:src="@mipmap/close" />



                </RelativeLayout>




            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="#FFF0F0F0" />




            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >


                <Button
                    android:id="@+id/link_btn"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:text="@string/The_next_step"
                    android:background="@drawable/btn_xiaogou_hui"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="50dp"
                    android:textColor="#FFFFFF"
                    />

            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
