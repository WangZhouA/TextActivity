<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">


    <include layout="@layout/header_bar"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                >

                <ImageView
                    android:id="@+id/buy_one"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:src="@mipmap/btn100" />

                <TextView
                    android:id="@+id/tv_buy_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/buy_one"
                    android:textColor="@color/bgroundA"
                    android:textSize="18dp"
                    android:layout_centerInParent="true"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                >

                <ImageView
                    android:id="@+id/by_two"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:src="@mipmap/btn100"/>

                <TextView
                    android:id="@+id/tv_by_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/buy_two"
                    android:textSize="18dp"
                    android:textColor="@color/bgroundA"
                    android:layout_centerInParent="true"
                    />

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:visibility="gone"
                >

                <ImageView
                    android:id="@+id/buy_Electronic_scale"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:src="@mipmap/btn100" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/buy_Electronic_scale"

                    android:textSize="18dp"
                    android:layout_centerInParent="true"

                    />

            </RelativeLayout>

            <TextView
                android:id="@+id/tv_msg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="收费说明收费说明收费说明收费说明收费说明收费说明收费说明收费说明收费说明收费说明收费说明收费说明收费说明收费说明收费说明收费说明收费说明收费说明收费说明收费说明收费说明收费说明收费说明收费说明收费说明收费说明收费说明收费说明收费说明收费说明收费说明收费说明收费说明收费说明收费说明收费说明收费说明收费说明收费说明收费说明收费说明收费说明收费说明收费说明收费说明收费说明收费说明收费说明收费说明收费说明收费说明收费说明收费说明收费说明收费说明收费说明收费说明"
                android:maxLines="3"
                android:ellipsize="end"
                android:layout_marginTop="20dp"

                />



        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:orientation="vertical"
            >

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#CDCDCD"
                ></View>
            <RelativeLayout
                android:id="@+id/rl_wx"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/wechat"
                    android:text="@string/WX"
                    android:gravity="center"
                    android:drawablePadding="20dp"
                    android:layout_centerVertical="true"


                    />

                <ImageView
                    android:id="@+id/wx_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/circle"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    />


            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#CDCDCD"
                ></View>
            <RelativeLayout
                android:id="@+id/rl_zfb"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/alipay"
                    android:text="@string/ZFB"
                    android:gravity="center"
                    android:drawablePadding="20dp"
                    android:layout_centerVertical="true"


                    />

                <ImageView
                    android:id="@+id/zfb_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/circle"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    />


            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#CDCDCD"
                ></View>



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                >

                <TextView
                    android:id="@+id/btn_buy"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_centerInParent="true"
                    android:textColor="#FFF"
                    android:text="@string/determine"
                    android:background="@drawable/btn_xiaogou"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:gravity="center"
                    android:textSize="20dp"
                    />



            </RelativeLayout>



        </LinearLayout>



    </LinearLayout>

</LinearLayout>
